{
    "manifest_version": 3,
    "name": "Live Webpage Reader",
    "version": "1.0",
    "permissions": [
      "sidePanel",
      "scripting",
      "activeTab"
    ],
    "action": {
      "default_title": "Open Reader" 
    },

    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],

  "background": {
      "service_worker": "background-source.js"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    }
  }